# ==================== FRONTEND ENVIRONMENT VARIABLES ====================
# These variables are prefixed with VITE_ and accessible in the React app

# Paystack Public Key (Test or Live)
# Get your key from https://dashboard.paystack.com/#/settings/developer
VITE_PAYSTACK_PUBLIC=pk_test_your_paystack_public_key_here

# API Base URL (leave empty for relative paths in production)
# Example: https://api.yourdomain.com
VITE_API_BASE=

# ==================== BACKEND ENVIRONMENT VARIABLES ====================
# These variables are used by the Node.js server

# Environment (development, staging, production)
NODE_ENV=production

# Server Port
PORT=3001

# Database Connection
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=postgresql://user:password@localhost:5432/sanitation_db?schema=public

# JWT Secret (Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# IMPORTANT: Change this in production!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Expiration (e.g., 1h, 7d, 30d)
JWT_EXPIRES_IN=7d

# CORS Allowed Origins (comma-separated)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ==================== PAYMENT GATEWAYS ====================

# Paystack (Nigeria)
# Get keys from: https://dashboard.paystack.com/#/settings/developer
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key

# M-Pesa (Kenya)
# Get credentials from: https://developer.safaricom.co.ke
MPESA_CONSUMER_KEY=your_mpesa_consumer_key
MPESA_CONSUMER_SECRET=your_mpesa_consumer_secret
MPESA_PASSKEY=your_mpesa_passkey
MPESA_SHORTCODE=174379
MPESA_ENVIRONMENT=sandbox
MPESA_CALLBACK_URL=https://yourdomain.com/api/mpesa/callback

# ==================== THIRD-PARTY APIS ====================

# OpenWeather API
# Get key from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# OpenAI API (for AI features)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key

# ==================== EMAIL CONFIGURATION ====================

# SMTP Settings (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password
EMAIL_FROM=noreply@yourdomain.com

# ==================== LOGGING ====================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info

# Log Directory
LOG_DIR=./logs

# ==================== SECURITY ====================

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret
SESSION_SECRET=your_session_secret_change_this

# ==================== MONITORING (OPTIONAL) ====================

# Sentry DSN (for error tracking)
# Get from: https://sentry.io
SENTRY_DSN=

# Google Analytics ID
GA_TRACKING_ID=

# ==================== FEATURE FLAGS ====================

# Enable/disable features
ENABLE_AI_FEATURES=true
ENABLE_WEATHER_API=true
ENABLE_MPESA=true
ENABLE_PAYSTACK=true
ENABLE_EMAIL_NOTIFICATIONS=true

# ==================== BACKUP CONFIGURATION ====================

# Backup Schedule (cron format: minute hour day month weekday)
BACKUP_SCHEDULE=0 2 * * *

# Backup Retention (days)
BACKUP_RETENTION_DAYS=30

# Backup Storage Path
BACKUP_PATH=./backups

# ==================== PRODUCTION OPTIMIZATIONS ====================

# Database Connection Pool
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Request Timeout (milliseconds)
REQUEST_TIMEOUT=30000

# Max Request Size (in bytes)
MAX_REQUEST_SIZE=10485760
