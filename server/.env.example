# Server Configuration
PORT=3001

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/sanitation_db?schema=public"

# JWT Secret - MUST be a strong, random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# OpenAI API Key (optional, for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Feature Flags
ENABLE_ANALYTICS_API=true
ENABLE_FORECAST_API=true
ENABLE_WEATHER_CACHE=true
WEATHER_CACHE_TTL_S=600

# OpenWeather API (optional, for weather features)
OPENWEATHER_API_KEY=your_openweather_api_key_here
