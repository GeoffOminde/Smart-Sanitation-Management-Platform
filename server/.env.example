# Copy to .env and fill the values
# Paystack
PAYSTACK_SECRET=
PAYSTACK_PUBLIC=

# Safaricom (M-Pesa sandbox)
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
MPESA_SHORTCODE=
MPESA_PASSKEY=
MPESA_ENVIRONMENT=sandbox

# Recommended to avoid common port conflicts. The demo server will fall back to the next available port if the configured one is in use.
PORT=3001

# OpenWeather
# Sign up: https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Hugging Face Inference API
# Create a token: https://huggingface.co/settings/tokens (Use "read" scope)
HUGGING_FACE_TOKEN=

# ------------------------------
# Safety switches and HTTP settings
# ------------------------------
# Enable/disable the forecast API endpoint (default: true)
ENABLE_FORECAST_API=true

# Enable in-memory caching for /api/weather/current (default: false)
ENABLE_WEATHER_CACHE=false
# TTL in seconds for weather cache (default: 600 = 10 minutes)
WEATHER_CACHE_TTL_S=600

# Global HTTP timeout for outbound requests (ms) (default: 8000)
HTTP_TIMEOUT_MS=8000

# Optional analytics events ingestion endpoint (demo only; default: false)
ENABLE_ANALYTICS_API=false
